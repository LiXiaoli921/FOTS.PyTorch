{
    "name": "FOTS",
    "cuda": true,
    "gpus": [0,1],
    "data_loader": {
        "data_dir": "/media/ai/64AE7354AE731DAC/dataset/ICDAR2015",
        "batch_size": 16,
        "shuffle": true,
        "workers": 2
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 1,
    "lr_scheduler": {
            "gamma": 0.8685113737513527
    },
 
    "optimizer_type": "SGD",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "FOTSLoss",
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "FOTSModel",
    "model": {
        "mode": "detection"
    }
}
